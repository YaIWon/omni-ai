{
  "manifest_version": 3,
  "name": "OmniAgent Browser Integration",
  "version": "1.0.0",
  "description": "Allows OmniAgent to see and interact with your browser",
  "permissions": [
    "activeTab",
    "tabs",
    "scripting",
    "webNavigation",
    "storage",
    "clipboardRead",
    "clipboardWrite"
  ],
  "host_permissions": [
    "http://localhost:8765/*",
    "ws://localhost:8765/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "OmniAgent"
  },
  "web_accessible_resources": [{
    "resources": ["injected.js"],
    "matches": ["<all_urls>"]
  }]
}
